{
  "appId": "bot.molt.desktop",
  "productName": "Moltbot",
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "../dist",
      "to": "dist",
      "filter": ["**/*", "!Moltbot.app/**/*"]
    }
  ],
  "asar": true,
  "mac": {
    "category": "public.app-category.productivity",
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": ["nsis", "portable"]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
