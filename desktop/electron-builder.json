{
  "appId": "bot.molt.desktop",
  "productName": "Moltbot",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "assets/**/*"
  ],
  "extraResources": [
    {
      "from": "../dist",
      "to": "dist",
      "filter": ["**/*", "!Moltbot.app/**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": ["dmg", "zip"],
    "icon": "assets/icon.icns"
  },
  "win": {
    "target": ["nsis", "portable"],
    "icon": "assets/icon.ico"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Office",
    "icon": "assets/icon.png"
  }
}
