{
  "name": "moltbot-desktop",
  "version": "2026.1.29",
  "description": "Moltbot Desktop",
  "main": "src/main.js",
  "scripts": {
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^25.1.7"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "build": {
    "appId": "bot.molt.desktop",
    "productName": "Moltbot",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
